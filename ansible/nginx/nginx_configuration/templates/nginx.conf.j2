# /etc/nginx/nginx.conf
user {{ user | default('nginx') }};
worker_processes {{ worker_processes | default('auto') }};
error_log {{error_log }} {{ error_level | default('warn') }};

include /etc/nginx/modules/*.conf;
include /etc/nginx/conf.d/*.conf;

events {
    worker_connections {{ worker_connections | default(1024) }};
}

http {
    include /etc/nginx/mime.types;
    default_type application/octet-stream;

    #error pages
    error_page 404 /error/404.html;
    error_page 500 /error/500.html;
    error_page 403 /error/403.html;

    # Security - hide nginx version
    server_tokens off;

    # File upload limits - CRITICAL for security
    client_max_body_size {{ client_max_body_size | default('1m') }};

    # Performance optimizations - ALWAYS enable
    sendfile on;
    tcp_nopush on;

    # Modern SSL configuration
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers on;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 1d;
    ssl_session_tickets off;

    # Compression - ALWAYS enable
    gzip on;
    gzip_vary on;
    gzip_types text/plain text/css application/json application/javascript text/xml;

    # WebSocket support
    map $http_upgrade $connection_upgrade {
        default upgrade;
        '' close;
    }
    # Cache
    {% if caching %}
    proxy_cache_path /var/cache/nginx levels=1:2 keys_zone=cache:{{ cache_size | default('10m') }} max_size={{ cache_max_size | default('1g') }} inactive={{ cache_inactive | default('60m') }};
    {% endif %}



    # Logging
    log_format main '$remote_addr - $remote_user [$time_local] "$request" '
                    '$status $body_bytes_sent "$http_referer" '
                    '"$http_user_agent" "$http_x_forwarded_for"';

    access_log {{ access_log }} main;
    include /etc/nginx/conf.d/*.conf;
    include /etc/nginx/sites-enabled/*;
}   